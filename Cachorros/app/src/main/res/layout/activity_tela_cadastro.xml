<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TelaCadastro">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout_topo"
        android:orientation="vertical">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/et_raca"
            android:hint="Raça do cachorro"
            android:inputType="text"
            android:textSize="20sp"
            />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/et_preco"
            android:hint="Preço médio"
            android:inputType="number"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@id/et_raca"
            />

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Indicado para criança?"
            android:id="@+id/sw_indicado"
            app:layout_constraintTop_toBottomOf="@id/et_preco"
            />

    </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/bt_cadastrarCachorro"
            android:text="Cadastrar Cachorro"
            android:textSize="20sp"
            android:onClick="criarCachorro"
            app:layout_constraintTop_toBottomOf="@id/layout_topo"
            />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/bt_cadastrarCachorro"
        android:textSize="20sp"
        android:id="@+id/tv_cachorro"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/doguinho"
        android:id="@+id/iv_cachorro"
        android:visibility="invisible"
        app:layout_constraintTop_toBottomOf="@id/tv_cachorro"
        />





</androidx.constraintlayout.widget.ConstraintLayout>